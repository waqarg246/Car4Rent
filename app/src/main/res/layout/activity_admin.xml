<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity"
    android:background="@drawable/bggradient"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="Welcome Sir"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/buttonlogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="2dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_exit_to_app_black_24dp" />

            </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Click the image below to Upload a image"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewcar"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonstylebg"
        android:gravity="center"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/editTextcarname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextstylebg"
        android:drawableLeft="@drawable/ic_directions_car_black_24dp"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Enter Car Name"

        android:inputType="text"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editTextcarmodel"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextstylebg"
        android:drawableLeft="@drawable/ic_directions_car_black_24dp"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Enter Car Model"
        android:inputType="text"
        android:padding="10dp"

        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/editTextprice"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittextstylebg"
        android:drawableLeft="@drawable/ic_directions_car_black_24dp"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Ener Price(rs) per KM"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="#ffffff"

        android:textColorHint="#ffffff" />

    <Button
        android:id="@+id/buttonok"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"

        android:background="@drawable/buttonstylebg"
        android:text="Ok"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:layout_marginLeft="0dp"
        android:text="View Record"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:visibility="invisible"/>


</LinearLayout>


        </LinearLayout>


    </ScrollView>



</LinearLayout>